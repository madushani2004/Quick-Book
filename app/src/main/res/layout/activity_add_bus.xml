<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="24dp"
    android:background="@color/white"
    android:id="@+id/main"
    tools:context=".AddBusActivity">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:gravity="center">

            <!-- Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add Bus"
                android:id="@+id/addBusTitle"
                android:textSize="36sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lavender" />

            <!-- Bus Number Input -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bus_number_input"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:hint="Bus Number"
                android:textColor="@color/black" />

            <!-- Bus Name Input -->
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bus_name_input"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:hint="Bus Name"
                android:textColor="@color/black" />

            <!-- Driver Spinner -->
            <Spinner
                android:id="@+id/driver_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:spinnerMode="dropdown" />

            <!-- Route Spinner -->
            <Spinner
                android:id="@+id/route_spinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/custom_edittext"
                android:layout_marginTop="20dp"
                android:padding="8dp"
                android:spinnerMode="dropdown" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/submit_button"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_gravity="bottom"
                android:text="Add Bus"
                android:textSize="18sp"
                android:backgroundTint="@color/lavender"
                android:textColor="@android:color/white"
                app:cornerRadius="20dp" />
        </LinearLayout>


</LinearLayout>

